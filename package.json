{
  "name": "build-ocaml",
  "main": "./lib/main",
  "version": "0.2.0",
  "description": "Compile OCaml files with Ocamlbuild",
  "keywords": [
    "ocaml",
    "build",
    "compile",
    "ocamlbuild"
  ],
  "repository": "https://github.com/314eter/atom-build-ocaml",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "builder": {
      "description": "Runs Ocamlbuild",
      "versions": {
        "2.0.0": "provideBuilder"
      }
    }
  },
  "configSchema": {
    "ocamlbuildPath": {
      "title": "Path to ocamlbuild",
      "type": "string",
      "default": "ocamlbuild",
      "order": 1
    },
    "ocamlbuildArgs": {
      "title": "Ocamlbuild Arguments",
      "type": "array",
      "default": [
        "-use-ocamlfind"
      ],
      "order": 2,
      "items": {
        "type": "string"
      }
    }
  },
  "devDependencies": {
    "standard": "*"
  },
  "standard": {
    "globals": [
      "atom"
    ]
  }
}
